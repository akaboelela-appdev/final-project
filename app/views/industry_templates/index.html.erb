<h1>
  All industries
</h1>

<a href="/industries/new">
  Add a new industry
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @industries.each do |industry| %>
  <tr>
    <td>
      <%= industry.id %>
    </td>

    <td>
      <%= industry.name %>
    </td>

    <td>
      <%= time_ago_in_words(industry.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(industry.updated_at) %> ago
    </td>

    <td>
      <a href="/industries/<%= industry.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
