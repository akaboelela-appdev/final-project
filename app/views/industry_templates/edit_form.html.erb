<!-- Validation failure messages -->
<% if @industry.errors.any? %>
  <% @industry.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit industry #<%= @industry.id %>
</h1>

<hr>

<form action="/update_industry/<%= @industry.id %>" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @industry.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update industry
  </button>
</form>

<hr>

<a href="/industries">
  Go back
</a>
