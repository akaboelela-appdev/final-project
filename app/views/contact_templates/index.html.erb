<!-- Validation failure messages -->
<% if @contact.present? %>
  <% if @contact.errors.any? %>
    <% @contact.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  My Contacts
</h1>

<a href="/contacts/new">
  Add a new contact
</a>

<hr>

<table class="table">
  <tr>

    <th>
      Name
    </th>

    <th>
      Title
    </th>

    <th>
      Company
    </th>

    <th>
    </th>
  </tr>

  <% @contacts.each do |contact| %>
    <% if contact.user_id == current_user.id %>
      <tr>
        <td>
          <%= contact.name %>
        </td>

        <td>
          <%= contact.title %>
        </td>

        <td>
          <a href="/companies/<%=contact.company_id%>">
            <%= Company.find(contact.company_id).name %>
          </a>
        </td>

        <td>
            <a href="/contacts/<%= contact.id %>/edit" style="text-decoration:none;color:inherit;">
              <i class="far fa-edit"></i>
            </a>
            <a href="/contact_to_delete/<%= contact.id %>" style="text-decoration:none;color:inherit;">
              <i class="fas fa-trash-alt"></i>
            </a>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>

<h1>
  Add a new contact
</h1>

<hr>

<form action="/create_contact" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @contact.try(:name) %>">
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @contact.try(:title) %>">
  </div>

  <!-- Label and input for company_id -->
  <div class="form-group">
    <label for="company_id">
      Company
    </label>

    <%=
      select_tag("company_id",
        options_from_collection_for_select(
          Company.all.order(:name), # collection to loop over
          :id, # attribute to use for the value as a symbol
          :name, # attribute to use as the content as a symbol
        ),
        {class: "form-control"}
      )
    %>
  </div>

  <!-- Label and input for user_id -->
  <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create contact
  </button>
</form>
