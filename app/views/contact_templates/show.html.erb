<h1>
  Contact #<%= @contact.id %> details
</h1>

<a href="/contacts/<%= @contact.id %>/edit">
  Edit contact
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @contact.name %>
  </dd>

  <dt>
    Title
  </dt>
  <dd>
    <%= @contact.title %>
  </dd>

  <dt>
    Company
  </dt>
  <dd>
    <%= @contact.company_id %>
  </dd>

  <dt>
    User
  </dt>
  <dd>
    <%= @contact.user_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@contact.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@contact.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_contact/<%= @contact.id %>">
  Delete contact
</a>

<hr>

<a href="/contacts">
  Go back
</a>
