<!-- Validation failure messages -->
<% if @role.present? %>
  <% if @role.errors.any? %>
    <% @role.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<hr>

<h3>All Roles</h3>
<table class="table">
  <tr>

    <th>
      Title
    </th>

    <th>
      City
    </th>

    <th>
      Coveragegroup
    </th>

    <th>
      Company
    </th>

    <th>
      Due date
    </th>
    
    <th>
    </th>
    
    <th>
    </th>
  </tr>

  <% @roles.each do |role| %>
  <tr>
    <td>
      <%= role.title %>
    </td>

    <td>
      <%= City.find(role.city_id).name %>
    </td>

    <td>
      <%= Coveragegroup.find(role.coveragegroup_id).name %>
    </td>

    <td>
      <%= Company.find(role.company_id).name %>
    </td>

    <td>
      <%= role.due_date %>
    </td>

    <td>
      <% if Bookmark.where(user_id: current_user.id).where(role_id: role.id).exists? %>
      <a href="/delete_bookmark/<%=Bookmark.where(user_id: current_user.id).where(role_id: role.id).first.id%>">
        <i class="fas fa-star"></i>
      </a>
      <% else %>
      <form action="/create_bookmark" method="post" id="myform">
        <input type="hidden" name="user_id" value="<%=current_user.id%>">
        <input type="hidden" name="role_id" value="<%=role.id%>">
        <input type="hidden" name="priority_id" value="2">
        <input type="hidden" name="status_id" value="1">
        <a href="#" onclick="document.getElementById('myform').submit()"><i class="far fa-star"></i></a>
      </form>
      <% end %>
    </td>
    <td>
      <a href="/roles/<%= role.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

<h1>
  Add a new role
</h1>

<hr>

<form action="/create_role" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @role.try(:title) %>">
  </div>

  <!-- Label and input for city_id -->
  <div class="form-group">
    <label for="city_id">
      City
    </label>

    <%=
      select_tag("city_id",
        options_from_collection_for_select(
          City.all.order(:name), # collection to loop over
          :id, # attribute to use for the value as a symbol
          :name, # attribute to use as the content as a symbol
        ),
        {class: "form-control"}
      )
    %>
  </div>

  <!-- Label and input for coveragegroup_id -->
  <div class="form-group">
    <label for="coveragegroup_id">
      Coveragegroup
    </label>

    <%=
      select_tag("coveragegroup_id",
        options_from_collection_for_select(
          Coveragegroup.all.order(:name), # collection to loop over
          :id, # attribute to use for the value as a symbol
          :name, # attribute to use as the content as a symbol
        ),
        {class: "form-control"}
      )
    %>
  </div>

  <!-- Label and input for company_id -->
  <div class="form-group">
    <label for="company_id">
      Company
    </label>

    <%=
      select_tag("company_id",
        options_from_collection_for_select(
          Company.all.order(:name), # collection to loop over
          :id, # attribute to use for the value as a symbol
          :name, # attribute to use as the content as a symbol
        ),
        {class: "form-control"}
      )
    %>
  </div>

  <!-- Label and input for due_date -->
  <div class="form-group">
    <label for="due_date">
      Due date
    </label>

    <input type="text" id="due_date" name="due_date" class="form-control" value="<%= @role.try(:due_date) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create role!
  </button>
</form>
