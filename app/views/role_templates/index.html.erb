<h1>
  All roles
</h1>

<a href="/roles/new">
  Add a new role
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      City
    </th>

    <th>
      Coveragegroup
    </th>

    <th>
      Company
    </th>

    <th>
      Due date
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @roles.each do |role| %>
  <tr>
    <td>
      <%= role.id %>
    </td>

    <td>
      <%= role.title %>
    </td>

    <td>
      <%= role.city_id %>
    </td>

    <td>
      <%= role.coveragegroup_id %>
    </td>

    <td>
      <%= role.company_id %>
    </td>

    <td>
      <%= role.due_date %>
    </td>

    <td>
      <%= time_ago_in_words(role.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(role.updated_at) %> ago
    </td>

    <td>
      <a href="/roles/<%= role.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
