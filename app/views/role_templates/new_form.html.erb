<!-- Validation failure messages -->
<% if @role.present? %>
  <% if @role.errors.any? %>
    <% @role.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new role
</h1>

<hr>

<form action="/create_role" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @role.try(:title) %>">
  </div>

  <!-- Label and input for city_id -->
  <div class="form-group">
    <label for="city_id">
      City
    </label>

    <input type="text" id="city_id" name="city_id" class="form-control" value="<%= @role.try(:city_id) %>">
  </div>

  <!-- Label and input for coveragegroup_id -->
  <div class="form-group">
    <label for="coveragegroup_id">
      Coveragegroup
    </label>

    <input type="text" id="coveragegroup_id" name="coveragegroup_id" class="form-control" value="<%= @role.try(:coveragegroup_id) %>">
  </div>

  <!-- Label and input for company_id -->
  <div class="form-group">
    <label for="company_id">
      Company
    </label>

    <input type="text" id="company_id" name="company_id" class="form-control" value="<%= @role.try(:company_id) %>">
  </div>

  <!-- Label and input for due_date -->
  <div class="form-group">
    <label for="due_date">
      Due date
    </label>

    <input type="text" id="due_date" name="due_date" class="form-control" value="<%= @role.try(:due_date) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>

<hr>

<a href="/roles">
  Go back
</a>
