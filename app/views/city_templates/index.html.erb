<h1>
  All Cities
</h1>

<a href="/city/new">
  Add a new city
</a>

<hr>

<table class="table">
  <tr>
    <th>
      Name
    </th>
  </tr>

  <% @cities.each do |city| %>
  <tr>
    <td>
      <a href="/city/<%= city.id %>">
        <%= city.name %>
      </a>
    </td>
  </tr>
  <% end %>
</table>

