<h1>
  City #<%= @city.id %> details
</h1>

<a href="/cities/<%= @city.id %>/edit">
  Edit city
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @city.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@city.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@city.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_city/<%= @city.id %>">
  Delete city
</a>

<hr>

<a href="/cities">
  Go back
</a>
