<h3>Bookmarked Roles</h3>
<table class="table">
  <tr>

    <th>
      Title
    </th>

    <th>
      City
    </th>

    <th>
      Coveragegroup
    </th>

    <th>
      Company
    </th>

    <th>
      Due date
    </th>
    
    <th>
    </th>
    <th>
    </th>
  </tr>

  <% @bookmarked_roles.each do |role| %>
  <tr>
    <td>
      <%= role.title %>
    </td>

    <td>
      <%= City.find(role.city_id).name %>
    </td>

    <td>
      <%= Coveragegroup.find(role.coveragegroup_id).name %>
    </td>

    <td>
      <%= Company.find(role.company_id).name %>
    </td>

    <td>
      <%= role.due_date %>
    </td>
    
    <td>
      <a href="/delete_bookmark/<%=Bookmark.where(user_id: current_user.id).where(role_id: role.id).first.id%>">
        <i class="fas fa-star"></i>
      </a>
    </td>

    <td>
      <a href="/roles/<%= role.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>