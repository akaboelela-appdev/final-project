<h1>
  Note #<%= @note.id %> details
</h1>

<a href="/notes/<%= @note.id %>/edit">
  Edit note
</a>

<hr>

<dl>
  <dt>
    Body
  </dt>
  <dd>
    <%= @note.body %>
  </dd>

  <dt>
    Company
  </dt>
  <dd>
    <%= @note.company_id %>
  </dd>

  <dt>
    User
  </dt>
  <dd>
    <%= @note.user_id %>
  </dd>

  <dt>
    Role
  </dt>
  <dd>
    <%= @note.role_id %>
  </dd>

  <dt>
    Contact
  </dt>
  <dd>
    <%= @note.contact_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@note.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@note.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_note/<%= @note.id %>">
  Delete note
</a>

<hr>

<a href="/notes">
  Go back
</a>
