<h1>
  All priorities
</h1>

<a href="/priorities/new">
  Add a new priority
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @priorities.each do |priority| %>
  <tr>
    <td>
      <%= priority.id %>
    </td>

    <td>
      <%= priority.name %>
    </td>

    <td>
      <%= time_ago_in_words(priority.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(priority.updated_at) %> ago
    </td>

    <td>
      <a href="/priorities/<%= priority.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
