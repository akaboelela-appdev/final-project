<h1>
  All notes
</h1>

<a href="/notes/new">
  Add a new note
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Body
    </th>

    <th>
      Company
    </th>

    <th>
      User
    </th>

    <th>
      Role
    </th>

    <th>
      Contact
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @notes.each do |note| %>
  <tr>
    <td>
      <%= note.id %>
    </td>

    <td>
      <%= note.body %>
    </td>

    <td>
      <%= note.company_id %>
    </td>

    <td>
      <%= note.user_id %>
    </td>

    <td>
      <%= note.role_id %>
    </td>

    <td>
      <%= note.contact_id %>
    </td>

    <td>
      <%= time_ago_in_words(note.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(note.updated_at) %> ago
    </td>

    <td>
      <a href="/notes/<%= note.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
